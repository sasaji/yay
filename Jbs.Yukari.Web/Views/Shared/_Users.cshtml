@model IEnumerable<Jbs.Yukari.Core.Models.User>
@{
  if (Model != null)
  {
    <div class="accordion mb-2" id="accordion-group">
      @foreach (var user in Model.Select((value, index) => new { value, index }))
      {
        <div class="accordion-item">
          @{
            var collapsed = "collapsed";
            var collapse = "false";
            var show = string.Empty;
            if (user.index == 0)
            {
              collapsed = string.Empty;
              collapse = "true";
              show = "show";
            }
          }
          <h2 class="accordion-header" id="@user.value.SamAccountName">
            <input type="hidden" name="Users[@user.index].Type" asp-for="@user.value.Type" />
            <button class="accordion-button @collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@user.value.SamAccountName" aria-expanded="@collapse" aria-controls="collapse_@user.value.SamAccountName">
              [@Jbs.Yukari.Domain.Types.GetTypeName(user.value.Type)] @user.value.SamAccountName
            </button>
          </h2>
          <div id="collapse_@user.value.SamAccountName" class="accordion-collapse collapse @show" aria-labelledby="@user.value.SamAccountName" data-bs-parent="#accordion-group">
            <div class="accordion-body">
              <div class="mb-2">
                <label class="form-label" asp-for="@user.value.SamAccountName"></label>
                <input class="form-control" name="Users[@user.index].SamAccountName" asp-for="@user.value.SamAccountName" />
              </div>
              <div class="mb-2">
                <label class="form-label" asp-for="@user.value.DisplayName"></label>
                <input class="form-control" name="Users[@user.index].DisplayName" asp-for="@user.value.DisplayName" />
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  }
}
